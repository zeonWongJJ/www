<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_marginLeft="@dimen/default_padding"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="6dp"
        app:cardMaxElevation="5dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/client_name"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text=""
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/shape_look_task_record"
                android:layout_gravity="right|top"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="习近平"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            />
        <com.app.base.widget.ZzHorizontalProgressBar
            android:id="@+id/pb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="7dp"
            app:zpb_padding="0dp"
            app:zpb_pb_color="@color/yellow"
            app:zpb_bg_color="@color/light_gray"
            app:zpb_max="100"
            app:zpb_progress="30"
            />
        <TextView
            android:id="@+id/progress_num"
            android:layout_width="50dp"
            android:textColor="@color/gray"
            android:text="0%"
            android:gravity="center"
            android:textSize="@dimen/text_size_title"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/score"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="@dimen/text_size_normal"
                android:background="@drawable/shap_yellow_stroke"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:textColorHint="@color/gray"
                android:text="10"
                android:layout_marginRight="5dp"
                />
        <ImageView
            android:id="@+id/more_action"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:src="@drawable/icon_arrow_down"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
