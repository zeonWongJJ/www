<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:text=""
        android:textColor="@color/black"
        android:padding="13dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/app_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_login_input_radius"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:hint="请输入手机号"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        android:textColorHint="@color/login_gray"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_login_input_radius"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:hint="请输入验证码"
            android:textSize="@dimen/text_size_normal"
            android:textColorHint="@color/login_gray"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <com.common.lib.widget.CodeButton
            android:id="@+id/code_bth"
            android:layout_width="wrap_content"
            android:text="获取验证码"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_size_normal"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_login_input_radius"
        android:hint="密码是8-20位数字字母组合"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size_normal"
        android:textColorHint="@color/login_gray"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/default_padding"
        android:background="@drawable/shape_login_blue_radius"
        android:text="注册"
        android:gravity="center"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />


</LinearLayout>
