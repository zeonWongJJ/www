<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/task_gray_style"
            android:text="@string/task_name"
            />
        <TextView
            android:id="@+id/task_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/task_black_style"
            android:text="登录注册"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/task_gray_style"
            android:text="@string/task_project"
            />
        <TextView
            android:id="@+id/project_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/task_black_style"
            android:text="V稻"
            />
    </LinearLayout>

    <!--计划任务里面显示-->
    <LinearLayout
        android:id="@+id/plan_task_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/task_gray_style"
            android:text="@string/task_plan"
            />
        <TextView
            android:id="@+id/task_belong_to"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/task_black_style"
            android:text="V稻项目开发"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/task_gray_style"
            android:text="@string/task_cycle"
            />
        <TextView
            android:id="@+id/complete_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/task_black_style"
            android:text="2018.06.12"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/task_gray_style"
            android:text="@string/task_status"
            android:paddingBottom="@dimen/default_padding"
            />
        <com.app.base.flow.FlowTagLayout
            android:id="@+id/color_flow_layout"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--发布的任务编辑-->
    <LinearLayout
        android:id="@+id/edit_publish_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/stop_task"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="终结任务"
                android:textColor="@color/black"
                android:paddingBottom="8dp"
                android:paddingTop="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:background="@drawable/shape_gray_radius"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/edit_task"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="编辑任务"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:background="@drawable/bg_stroke_red"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:textColor="@color/red_text"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
