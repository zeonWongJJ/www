<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">
    <include layout="@layout/layout_common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="85dp"
            android:src="@drawable/icon_default_user_detail"
            android:layout_height="85dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_title"
                android:text=""
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_phone_num"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"
                android:text=""
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_sex"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/gray"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:padding="5dp"
                android:textColor="@color/text_user_detail_black_color"
                android:text="邮箱"
                />
            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:text=""
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@color/line"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:padding="5dp"
                android:textColor="@color/text_user_detail_black_color"
                android:text="绑定平台"
                />
            <ImageView
                android:id="@+id/qq_bind"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_qq_unselect"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/wechat_bind"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_wechat_unselect"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@color/line"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:padding="5dp"
                android:textColor="@color/text_user_detail_black_color"
                android:text="积分"
                />
            <TextView
                android:id="@+id/user_score"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:text=""
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@color/line"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:padding="5dp"
                android:textColor="@color/text_user_detail_black_color"
                android:text="余额"
                />
            <TextView
                android:id="@+id/user_balance"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:text=""
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@color/line"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:padding="5dp"
                android:textColor="@color/text_user_detail_black_color"
                android:text="注册时间"
                />
            <TextView
                android:id="@+id/user_regtime"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:text=""
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@color/line"
            android:layout_height="1px"/>
    </LinearLayout>

</LinearLayout>
