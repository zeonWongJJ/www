<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_solid_corner_white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin">

        <ImageView
            android:id="@+id/store_img"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginLeft="@dimen/default_margin" />
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="V稻太古汇店"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总评："
                    android:textColor="@color/text_store_item_color"
                    android:textSize="@dimen/text_size_small"
                    />
                <TextView
                    android:id="@+id/total_comment_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务："
                    android:textColor="@color/text_store_item_color"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:textSize="@dimen/text_size_small"
                    />
                <TextView
                    android:id="@+id/total_service_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="质量："
                    android:textColor="@color/text_store_item_color"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:textSize="@dimen/text_size_small"
                    />
                <TextView
                    android:id="@+id/total_quality_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.6"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/store_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="开店时间：2018-.4-12"
                android:textColor="@color/text_store_item_color"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lunch_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_corner_code"
                android:gravity="center_vertical"
                android:text="餐饮订单"
                android:textColor="@color/red"
                android:padding="3dp"
                android:textSize="@dimen/text_size_smaller" />
            <TextView
                android:id="@+id/meeting_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_corner_code"
                android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:text="会议订单"
                android:padding="3dp"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_smaller" />
            <TextView
                android:id="@+id/seat_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_corner_code"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="座位订单"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_smaller" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
