<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/status_img"
        android:layout_width="8dp"
        android:background="@color/red"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_weight="1"
                android:text="事假"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_title" />
            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/gray"
                android:text="2018.05.12 11:14"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:text="请假描述"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_title"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:text="请假时间:2018.05.12 11:14-2018.05.12 11:14"
            android:textColor="@color/gray"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/gray"
            android:layout_marginTop="5dp"
            android:text="状态:已批准"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_publish_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/stop_absence"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="撤销请假"
                android:textColor="@color/black"
                android:paddingBottom="8dp"
                android:paddingTop="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:background="@drawable/shape_gray_radius"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/edit_absence"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="编辑请假"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:background="@drawable/bg_stroke_red"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:textColor="@color/red_text"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
