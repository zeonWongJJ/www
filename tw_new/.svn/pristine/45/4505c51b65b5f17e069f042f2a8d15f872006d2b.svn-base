/* 发布新闻 */
.productClassification{ width:1440px; margin:0 auto; font-size:0; }
.releaseNews{ margin-top:20px; margin-left:22px; }
.releaseNews>p{ height:53px; line-height:53px; padding-left:25px; font-size:16px; background:white; }

.releaseNewsTitle{ margin-top:20px; }
.releaseNewsTitle{ background:#fbfbfb; border-bottom:1px solid #ddd; }
.releaseNewsTitle>span{ display:inline-block; padding:15px 22px; font-size:16px; border:1px solid #ddd; border-top:2px solid #ffb900; border-bottom:none; background:white; }
.NewsList{ margin-left:22px; padding-bottom:20px; background:white; }
.NewsList>form{ padding:20px; }
.NewsList>form>ul>li{ margin-top:15px; }
.category>select{ vertical-align:middle; padding:5px; margin-right:10px; font-size:14px; color:#9e9e9e; border:1px solid #ddd; }
.NewsList>form>ul>li>span{ width:70px; text-align:right; display:inline-block; vertical-align:middle;  margin-right:10px; }
.NewsList>form>ul>li>span,.NewsList>form>ul>li>em>span{ color:#A6A6A6; font-size:14px; }
.NewsList>form>ul>li>input{ padding:5px; border:1px solid #ddd; }
.NewsList>form>ul>li>input,.NewsList>form>ul>li>em>img,.NewsList>form>ul>li>em>span{ vertical-align:middle; }

#NewsSub{ display:inline-block; padding:6px 15px; cursor: pointer; margin-left:106px; margin-top:15px; font-size:14px; color:#a33300; background:#ffce1c; border:1px solid #e69c14; }



