<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_corner_solid"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/white_top_corner_solid"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="请输入手机号码"
                android:textColor="@color/black"
                android:gravity="left"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingBottom="@dimen/default_padding"
                android:layout_marginLeft="@dimen/default_margin"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/dismiss"
                android:layout_width="wrap_content"
                android:src="@drawable/phone_dialog_dismiss"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--4:3-->
        <com.gzqx.common.widget.PhoneEditText
            android:id="@+id/phone_number"
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:cursorVisible="false"
            android:background="@color/white"
            android:layout_margin="@dimen/default_margin"
            android:inputType="number"
            android:text=""
            android:textSize="@dimen/text_size_normal"
            android:maxLength="11" />
        <TextView
            android:id="@+id/click_to_phone"
            android:layout_width="match_parent"
            android:text="点击发送"
            android:background="@drawable/red_buttom_corner_solid"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>