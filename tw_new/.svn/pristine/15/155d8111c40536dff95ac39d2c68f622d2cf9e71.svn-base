	/**
	 * Validation Object
	 *
	 * Determines what the form validation class was instantiated as, fetches
	 * the object and returns it.
	 *
	 * @return	mixed
	 */
	function &_get_validation_object()
	{

		// We set this as a variable since we're returning by reference.
		$return = FALSE;

        $object = FALSE;
        if (isset($this->_TW->form_validation))
        	$object = 'form_validation';
		//if (FALSE !== ($object = $this->_TW->load->is_loaded('Form_validation')))			
		if (FALSE !== $object)			
		{
			if ( ! isset($this->_TW->$object) OR ! is_object($this->_TW->$object))
			{
				return $return;
			}

			return $this->_TW->$object;
		}

		return $return;
	}
