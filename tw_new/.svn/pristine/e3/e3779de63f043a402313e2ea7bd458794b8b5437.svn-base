.bottom{ height:175px; }
.logo{ display:inline-block; margin-top:100px; margin-left:20px; }
.logo>img{ width:66px; }
.payContainer{ float:right; margin-top:20px; }
.payContainer>span{ display:inline-block; margin-right:180px;  }
.payContainer>span,.num{ font-size:24px; font-weight:bold; }
.totoal{ font-style:normal; }
.logo,.codeBox{ vertical-align:middle; }
