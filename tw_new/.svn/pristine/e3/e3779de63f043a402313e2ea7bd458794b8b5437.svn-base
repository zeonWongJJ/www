.menu{ height:578px; overflow-y:scroll; }
/*.menu::-webkit-scrollbar{ display:none; }*/
.menuList{ display:inline-block; text-align:center; font-size:0; }
.menu>ul{ font-size:0; }
.menuList>a{ position:relative; display:inline-block; margin-top:28px; }
.menuList>a>i{ width:180px; height:180px; display:inline-block; }
.menuList>a>i>img{ width:100%; border-radius:8px; }
.menuList>a>span{ width:30px; height:30px; line-height:30px; position:absolute; top:-12px; right:-12px; font-size:20px; border-radius:50%; background:#ff002a; color:white; }
.dishesName{ width:251px; margin-top:28px; padding:6px 0; font-size:16px; background:#ffe3d7; }
.dishesName>h1,.dishesName>dfn{ font-size:16px; font-style:normal; }
.dishesName>em{ font-size:12px; margin-right:10px; }
.dishesName>s{ font-size:12px; text-decoration:none; }
.dishesName>h1,.dishesName>dfn,.dishesName>em,.dishesName>s{ vertical-align:bottom; color:#336e00;  }
