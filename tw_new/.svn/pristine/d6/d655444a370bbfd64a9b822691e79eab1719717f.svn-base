<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="telephone=no" name="format-detection">
    <meta content="yes" name="apple-touch-fullscreen">
    <link rel="stylesheet" href="css/common.css"/>
    <link rel="stylesheet" href="css/searchPwd.css"/>
    <script src="js/jquery-1.8.2.min.js"></script>
    <script src="js/public.js"></script>

    <script src="js/searchPwd.js"></script>
    <title></title>
</head>
<body>
    <!--  密码找回 -->
    <div class="searchPwd">
        <header class="head">
            <em>&lt;</em>
            <span>密码找回</span>
        </header>
    </div>
    <!--  密码找回 -->

    <!-- 验证 -->
    <div class="validate">
        <form action="">
            <ul>
                <li class="userPhone">
                    <span>手机号</span>
                    <input type="text" id="phone" placeholder="请输入手机号" name="mobile"/>
                </li>
                <li class="userCode">
                    <span>验证码</span>
                    <input id="code" type="text" placeholder="请输入验证码" name="code"/>
                    <a class="getCode" >获取验证码</a>
                    <b class="codeTime hide">120s</b>
                    <em class="hide">重新获取</em>
                </li>
                <li class="userpwd">
                    <span>登录密码</span>
                    <input id="pwd" type="password" placeholder="请输入密码" name="password"/>
                    <i></i>
                </li>
                <li class="userpwd">
                    <span>重复输入</span>
                    <input id="rePwd" type="password" placeholder="请重复密码" name="password2"/>
                    <i></i>
                </li>
            </ul>
            <div class="sub">
                <button type="submit" >确定</button>
            </div>
        </form>
    </div>
    <!-- 验证 -->

    <!-- 验证提示 -->
    <div class="regTips hide">
        <p></p>
    </div>
    <!-- 验证提示 -->

</body>
</html>