body{ background:#f5f5f5; }
/* 广告 */
.balance{ height:500px; background:url("../images/57U58PIC5R2_1024.png") 100% 100%;  }
.balanceContent{ width:1200px; margin:0 auto; }
.balanceText{ display:inline-block; text-align:center; vertical-align:middle;  margin-top:90px; }
.balanceText>h1{ color:white; font-size:50px; }
.balanceText>p:nth-child(2){ margin-top:28px; font-size:40px; color:white; }
.balanceText>p:nth-child(3){ margin-top:24px; font-size:24px; color:white; }
.balanceText>a{ display:inline-block; margin-top:24px; padding:10px 20px; font-size:18px; background:white; color:#ff6633; }
.carousel{ display:inline-block; vertical-align:bottom; margin-left:300px; }
body .swiper-container{ width:500px; height:320px; top:30px; }
body .swiper-container img{ width:100%; height:300px; }
body .swiper-pagination-fraction, .swiper-pagination-custom, .swiper-container-horizontal > .swiper-pagination-bullets{ bottom:5px; }

/* 内容 */
.article{ width:1200px; margin:0 auto; }
/*.productContainer{ position:relative; }*/
.codeContainer{ position:fixed; top:514px; padding:6px; background:white; z-index:2; }
.code{ padding:8px; border:1px solid red; }
.code>img{ width:110px; }
.code>p{ text-align:center; font-size:14px; }
.productContainer>p{ text-align:right; padding:15px 0; border-bottom:1px solid #ddd;  }
.productContainer>p>span{ float:left; font-size:16px; color:#666; }
.productContainer>p>a>span{ font-size:16px; color:#666; }
.productContainer>p>a>img{ width:10px; }
.productContainer>p>a>span,.productContainer>p>a>img{ vertical-align:middle; }
.productList>div{ display:inline-block; vertical-align:top; }
.productList>div>a{ display:block; padding:8px; margin-top:15px; background:white; }
.productList>div>a>div{ text-align:center; }
.productList>div>a>div>span{ font-size:20px; }
.productList>div>a>div>span,.productList>div>a>div>img{ vertical-align:middle; }

.productLeft{ width:280px; }
.productMiddle{ width:580px; margin-left:20px; }
.productRight{ width:280px; margin-left:20px; }

.productLeft>a:nth-child(1)>div{ height:192px; line-height:192px; background:#00ffff; }
.productLeft>a:nth-child(1)>div>span{ color:#008a8a; }
.productLeft>a:nth-child(2)>div{ height:262px; line-height:262px; background:#ff7686; }
.productLeft>a:nth-child(2)>div>span{ color:#ff3149; }
.productMiddle>a:nth-child(1)>div{ height:262px; line-height:262px; background:#ffe640; }
.productMiddle>a:nth-child(1)>div>span{ color:#d69c00; }
.productMiddle>a:nth-child(2)>div{ height:262px; line-height:262px; background:#6ec3ff; }
.productMiddle>a:nth-child(2)>div>span{ color:#0095ff; }
.productRight>a:nth-child(1)>div{ height:262px; background:#ff894f; }
.productRight>a:nth-child(1)>div>span{ display:inline-block; margin-top:40px; margin-bottom:30px; color:#ff4200; }
.productRight>a:nth-child(2)>div{ height:210px; }
.productRight>a:nth-child(2)>div>span{ display:inline-block; margin-top:60px; font-size:22px; }

/* 消息 */
.message{ position:relative; padding:33px; margin-top:30px; background:white; }
.message>span{ position:absolute; display:inline-block; left:-13px; padding:8px 28px; background:#ff8d00; font-size:20px; color:white; }
.message>i{ position:absolute; top:77px; left:-13px; border-left: 13px solid transparent;  border-top: 6px solid #ff8d00; }
.messageList{ margin-top:80px; }
.messageList>dl{ margin-bottom:15px; border-bottom:1px solid #ddd; }
.messageList>dl>dt>a{ cursor:pointer; }
.messageList>dl>dt>a>i{ width:8px; height:8px; display:inline-block; vertical-align:middle; margin-left:10px; background:#ff8d00; border-radius:50%; }
.messageList>dl>dt>a>span{ vertical-align:middle; margin-left:10px; font-size:16px; color:#ff8d00; font-weight:bold; }
.messageList>dl>dt>span{ float:right; font-size:14px; color:#666666; }
.messageList>dl>dd{ width:850px; height:18px; position:relative; overflow:hidden; margin:10px 0; padding-left:32px; font-size:14px; color:#666666; }
.messageList>dl>dd:after{ content:"..."; position:absolute; bottom:0; right:0; padding:0 20px 1px 45px; background:url(http://newimg88.b0.upaiyun.com/newimg88/2014/09/ellipsis_bg.png) repeat-y;   }
.message>a{ display:block; text-align:right; margin-top:20px; }
.message>a>span{ font-size:16px; color:#ff8d00; }
.message>a>img{ width:8px; }
.message>a>span,.message>a>img{ vertical-align:middle; }

.popMess{
    width:640px;
    position:absolute;
    left:700px;
    background:white;
    z-index:3;
}
.popMess>p,.popNotice>p{
    height:33px;
    line-height:33px;
    text-align:right;
    margin-right:24px;
    font-size:12px;
    cursor:pointer;
}
.popMess>dl,.popNotice>dl{
    height:285px;
    overflow-y:scroll;
    padding:0 62px;
}
.popMess>dl>dt{
    font-size:14px;
    font-weight:bold;
}
.popMess>dl>dd{
    margin-top:14px;
    font-size:12px;
}

.lay{
    position:absolute;
    width:100%;
    top:0;
    background:black;
    opacity:0.5;
    z-index:3;
}