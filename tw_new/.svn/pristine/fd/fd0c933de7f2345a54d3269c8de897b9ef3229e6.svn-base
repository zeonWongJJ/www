/*  角色列表 */
.productClassification{ width:1440px; margin:0 auto; font-size:0; }
.adminList{ margin-top:20px; margin-left:22px; }
.adminList>p{ height:45px; line-height:45px; padding-left:25px; font-size:16px; background:white; }

/* 编辑管理员账号 */
.addAdmin{ margin-top:15px; margin-left:22px; font-size:15px; background:white;  }
.addAdmin>p{ padding:12px 15px; border-bottom:1px solid #ddd; }
.addAdmin>p>span{ color:#58AFE8; font-weight:bold; }
.addAdmin>form{ padding:20px; }
.addAdmin>form>ul>li{ margin-top:15px; }
.addAdmin>form>ul>li>span{ width:70px; text-align:right; display:inline-block; margin-right:10px; }
.addAdmin>form>ul>li>span,.addAdmin>form>ul>li>em>span{ color:#A6A6A6; font-size:14px; }
.addAdmin>form>ul>li>input{ padding:5px; border:1px solid #ddd; }
.addAdmin>form>ul>li>input,.addAdmin>form>ul>li>em>img,.addAdmin>form>ul>li>em>span{ vertical-align:middle; }
#addAccount_name,#editAdmin_name,#editAdmin_phone{ width:140px; }
#addAdmin_mail{ width:200px; }
#addAdmin_pwd,#editAdmin_rePwd{ width:180px; }
.addAdminSex>em{ vertical-align:middle; color:#A6A6A6; font-size:14px; }
.addAdminSex>em>img{ vertical-align:middle; }
.addRoleLevel{ width:600px; display:inline-block; vertical-align:top; }
.addRoleLevel>a{ display:inline-block; cursor: pointer; position:relative; padding:8px 12px; margin-bottom:10px; margin-right:6px; font-size:14px; background:#f2f2f2; border-radius:5px;  }
.addRoleLevel>a>img{ width:18px; position:absolute; right:-3px; top:-8px; }
#addAdminSub{ display:inline-block; padding:6px 15px; margin-left:87px; margin-top:15px; color:#a33300; background:#ffce1c; border:1px solid #e69c14; }
