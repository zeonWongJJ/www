body{ background:#efefef; }
/* 评价列表 */
/* 被评价人 */
#evaluate{ height:1.5rem; line-height:1.5rem; padding:0 0.25rem; margin:0.2rem 0; background:white; }
#evaluate>i>img{ width:1.3rem; vertical-align:top; border-radius:50%; }
#evaluate>span{ display:inline-block; margin-left:0.2rem; font-size:0.4rem; font-weight:bold; }
#evaluate>b>img{ width:0.5rem; vertical-align:sub; }
#evaluate>em{ color:#6687f0; font-weight:bold; font-size:0.4rem; }
/* 评价 */
/* 评价的类别 */
.evaluateCate{ font-size:0; background:white; padding:0.4rem 0; border-bottom:1px solid #ddd; }
.evaluateCate>span{ width:50%; text-align:center; display:inline-block; font-size:0.4rem; }
.evaluateCate>span>em{ font-weight:bold; padding:0.4rem 0;}
.evaluateCate>span:first-child>em{ padding:0.4rem 0; border-bottom:0.1rem solid red; }
/*  评价内容 */
.evaluateContent>ul>li{ position:relative; background:white; margin-bottom:0.25rem; }
.evaluateContent>ul>li>i{ position:absolute; top:0.4rem; left:0.4rem; }
.evaluateContent>ul>li>i>img{ width:1.7rem; border-radius:50%; }
.evaInfo{ margin-left:2.5rem; padding-top:0.25rem; padding-right:0.45rem; }
.evaInfo>.p1{ height:1rem; line-height:1rem; }
.evaInfo>.p1>span{ font-size:0.4rem; font-weight:bold; }
.evaInfo>.p1>img{ width:0.65rem; vertical-align:middle; }
.evaInfo>.p1>em{ float:right; font-size:0.4rem; color:#999999; margin-right:0.25rem; }
.evaInfo>.p2{ color:red; font-weight:bold; font-size:0.4rem; margin-bottom:0.25rem; }
.evaInfo>.p3{ padding-right:0.35rem; font-weight:bold; font-size:0.4rem; }
/* 评价人信息 */
.evaluatedPerson{ position:relative; margin:0.3rem 0; background:#efefef; }
.evaluatedPerson>i>img{ width:1.5rem; position:absolute; top:0.15rem; left:0.35rem; border-radius:50%;  }
.evaluatedPerson>p{ margin-left:2.1rem; }
.evaluatedPerson>p>span{ display:inline-block; margin-top:0.35rem; font-size:0.4rem; font-weight:bold; }
.evaluatedPerson>p>i>img{ width:0.5rem; vertical-align:bottom; }
.evaluatedPerson>span{ display:inline-block; font-size:0.35rem; color:#82b2f4; margin-left:2.1rem; margin-bottom:0.35rem; margin-top:0.15rem; padding:0.01rem 0.15rem; border:1px solid #fed532; border-radius:20px;  }
.evaluatedPerson>b{ position:absolute; top:-4px; left:-4px;}
.evaluatedPerson>b>img{ width:1.2rem; }
/* 图片组 */
.imgGroup{ padding:0.2rem 0; margin-bottom:0.25rem; border-bottom:0.05rem solid #ddd; }
.imgGroup>img{ width:1.6rem; display:inline-block; margin-left:0.2rem; border-radius:0.1rem; }
/* 追评 */
.addComment>h3{ color:red; font-weight:bold; font-size:0.4rem; }
.addComment>p{ margin-top:0.25rem; font-size:0.4rem; font-weight:bold; }
.addComment>.imgGroup{ border:none; }
/* 状态信息及追评  */
.stateInfo>dl{ height:0.8rem; line-height:0.8rem; display:inline-block; margin-top:0.1rem; margin-bottom:0.35rem; }
.stateInfo>dl>dd{ display:inline-block; font-size:0.35rem; color:#999999; }
.stateInfo>span{ float:right; font-size:0.4rem; border:1px solid #ddd; padding:0.15rem 0.35rem; border-radius:1rem; }
/* 回复 */
.reply{ position:relative; padding-bottom:0.25rem; border-top:1px solid #ddd; }
.reply>i{ position:absolute; top:0.25rem; }
.reply>i>img{ width:1.4rem; position:absolute; }
.reply>p{ margin-left:1.6rem; margin-top:0.25rem; font-weight:bold; font-size:0.35rem;  }
.reply>span{ display:inline-block; margin-top:0.1rem; padding:0.01rem 0.1rem; margin-left:1.6rem; font-size:0.35rem; color:#82b2f4; border:1px solid #fed532; border-radius:1rem;  }
.reply>em{ display:block; margin-left:1.6rem; margin-top:5px; font-size:0.35rem; }
.reply>b{ display:block; margin-left:1.6rem; margin-top:5px; font-size:0.35rem;}
.reply>b>span{ color:#403ec7; }
.reply>b>em{ color:#403ec7; }

