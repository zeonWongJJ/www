<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:text="注册"
        android:textColor="@color/black"
        android:padding="13dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/app_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mobile_num"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_login_input_radius"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:hint="请输入登录账号"
        android:inputType="textAutoComplete"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        android:textColorHint="@color/login_gray"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_login_input_radius"
        android:hint="请输入登录密码"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size_normal"
        android:textColorHint="@color/login_gray"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:padding="@dimen/default_padding"
        android:background="@drawable/shape_login_blue_radius"
        android:text="登录"
        android:gravity="center"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/white"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <View
            android:layout_width="83dp"
            android:background="@color/line"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:text="第三方登录"
            />
        <View
            android:layout_width="83dp"
            android:background="@color/line"
            android:layout_height="1dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/wechat_login"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_wx_login"
        android:layout_height="wrap_content" />
</LinearLayout>
