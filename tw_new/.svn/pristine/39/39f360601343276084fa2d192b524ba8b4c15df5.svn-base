/* 发布动态 */
.pjoTitle{ position:relative; background:white; }
.pjoTitle>a.backUp{ position:absolute; left:0.24rem; top:1.3rem; }
.pjoTitle>a.backUp>img{ width:0.85rem; }
.pjoTitle>a.release{ height:0.6rem; line-height:0.6rem; display:inline-block; position:absolute; right:0.24rem; top:1.1rem; padding:0 0.26rem; font-size:0.4rem; background:#fa4b09; color:white; border-radius:0.1rem; }
.dynamicBox{ padding:0.42rem 0.6rem; background:white; }
.dynamicBox>textarea{ width:100%; height:2.6rem; font-size:0.4rem; resize:none; }
/* 提示层 */
.tips{ width:8rem; position:absolute; top:50%; left:1rem; text-align:center; padding:0.26rem; font-size:0.37rem; background:#303030; color:white; border-radius:0.2rem; display:none; z-index:3; }

.container {
    width: 100%;
    height: 100%;
    overflow: auto;
    clear: both;
}

.z_photo {
    clear: both;
    /*border: 1px solid #555;*/
}

.z_photo img {
    width: 2rem;
    height: 2rem;
}

.z_addImg {
    float: left;
    margin-top: 0.2rem;
    margin-right:0.2rem;
}

.z_file {
    width: 2rem;
    height: 2rem;
    background: url(/static/style_default/images/z_add.png) no-repeat;
    background-size: 100% 100%;
    float: left;
    margin-top: 0.2rem;
    margin-right: 0.2rem;
}

.z_file input::-webkit-file-upload-button {
    width: 2rem;
    height: 2rem;
    border: none;
    position: absolute;
    outline: 0;
    opacity: 0;
}

.z_file input#file {
    display: block;
    width: 2rem;
    height: 2rem;
    border: 0;
    vertical-align: middle;
}
/*遮罩层*/

.z_mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    display: none;
}

.z_alert {
    border-radius:0.1rem;
    background: #fff;
    font-size: 0.4rem;
    text-align: center;
    position: absolute;
    left:4rem;
    top: 50%;
    margin-left: -1.5rem;
    margin-top: -2rem;
}

.z_alert p:nth-child(1) {
    /*line-height: 1.5rem;*/
    padding:0.4rem;
}

.z_alert p:nth-child(2) span {
    display: inline-block;
    width: 49%;
    height: 0.7rem;
    line-height: 0.7rem;
    float: left;
    border-top: 1px solid #ddd;
}

.z_cancel {
    border-right: 1px solid #ddd;
}


