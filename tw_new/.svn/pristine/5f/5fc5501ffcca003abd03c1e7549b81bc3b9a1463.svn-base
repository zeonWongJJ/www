html,body{ height:100%; width:100%; margin:0; padding:0; }
body{ width:100%; height:100%; background:url(/static/style_default/image/loginBg.png)no-repeat;  background-size:100% 100%;position:absolute; }
.login{ width:430px; }
.login>p{ text-align:center; font-size:38px; font-weight:bold; color:white; }
.loginBox{ width:300px; text-align:center; padding:30px 0; margin:20px auto; background-color:rgba(255,255,255,0.2)!important; background-color:#fff; filter:Alpha(opacity=50); }
.loginBox>form{ position:relative; }
.loginBox>form>dl>dd{ margin-top:20px; }
.loginBox>form>dl>dd:first-child{ margin-top:0; }
.loginBox>form>dl>dd>p{ text-align:left; margin-left:28px; color:white; font-size:14px; }
.loginBox>form>dl>dd>input{ width:232px; padding:10px; border:1px solid black; }
#sub{ width:250px; padding:10px 0; margin-top:45px; font-size:16px; background:#ffed6d; border-radius:4px; cursor:pointer; }
/* �ײ����� */
.bottomText{ width:100%; text-align:center; position:fixed; bottom:0;  }
.bottomText>span{ font-size:16px; margin:0 10px;  }

/* ��¼��ʾ */
.loginTips{ left:45%; margin:0 auto; background-color:rgba(0,0,0,0.6)!important; background-color:#fff;filter:Alpha(opacity=50); border-radius:8px; }
.loginTips>p{ display:inline-block; padding:10px 30px; color:white;  }


