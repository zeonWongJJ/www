/* 积分规则 */
.content            { margin-top:1.2rem; padding:0 1rem; }
.content>h2         { padding:0.3rem 0; font-size:0.5rem; font-weight:bold; text-align:center; border-bottom:0.01rem solid #ddd; }
.content>section    { margin-top:0.8rem; }
.content>section>p  { font-size:0.4rem; }
/* 关闭按钮 */
.close               { display:block; margin-top:1rem; text-align:center; }
.close>img           { width:0.7rem; }








