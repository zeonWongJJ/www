.rule{ height:9.12rem;  background-image:url(../images/red_bg.png); background-repeat:no-repeat; background-position:0 -2rem; background-size:10rem 18.12rem; }
.ruleContent{ padding:0 0.66rem; padding-top:1.3rem; }
.ruleContent>p{ margin-top:0.53rem; font-size:0.37rem; color:white;  }
