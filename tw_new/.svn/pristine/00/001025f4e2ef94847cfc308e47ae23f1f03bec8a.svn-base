<template>
  <div class="layout">
    <Layout>
      <Header style="padding: 0; border-radius: 0">
        <Menu mode="horizontal" active-name="1">
          <div class="layout-logo">
            <img :src="logoSrc" alt="">
          </div>
          <a href="javascript:void(0);" class="home-icon" @click.stop="collapsed = !collapsed">
            <Icon type="md-menu" size="20" color="#001529"/>
          </a>
          <a href="javascript:void(0);" class="home-icon" title="回到首页" @click.stop="goHomePage" v-if="$route.name !== '_home'">
            <Icon type="md-home" size="20" color="#001529"/>
          </a>
        </Menu>
      </Header>
      <Layout>
        <Sider collapsible :collapsed-width="64" :width="256" hide-trigger v-model="collapsed" :style="{overflow: 'hidden'}" :menu-list="menuList">
          <side-menu :menuList="menuList" @on-select="turnToPage"></side-menu>
        </Sider>
        <Layout>
          <breadcrumb></breadcrumb>
          <Content class="main-content-con" ref="mainContentCon">
            <router-view></router-view>
          </Content>
        </Layout>
      </Layout>
    </Layout>
  </div>
</template>

<script>
import breadcrumb from './components/breadcrumb'
import sideMenu from './components/side-menu'

export default {
  name: 'Main',
  components: {
    breadcrumb,
    sideMenu
  },
  data () {
    return {
      collapsed: false,
      logoSrc: 'data:image/jpeg;base64,'
    }
  },
  computed: {
    menuList () {
      return this.$store.getters.menuList
    }
  },
  methods: {
    goHomePage () {
      console.log(this.$route)
      this.$router.push({
        name: '_home'
      })
    },
    turnToPage (route) {
      let { name, params, query } = {}
      if (typeof route === 'string') name = route
      else {
        name = route.name
        params = route.params
        query = route.query
      }
      if (name.indexOf('isTurnByHref_') > -1) {
        window.open(name.split('_')[1])
        return
      }
      this.$router.push({
        name,
        params,
        query
      })
    }
  }
}
</script>

<style lang="less" scoped>
@import "./main.less";
</style>
