/*  ��Ʒ���� */
.productClassification{ width:1440px; margin:0 auto; font-size:0; }
.classification{ margin-top:20px; margin-left:22px; }
.classification>p{ height:53px; line-height:53px; padding-left:25px; font-size:16px; background:white; }

/*  ��Ʒ�����б� */
.classificationList{ margin-top:20px; background:white; }
.classificationList>form{ padding-top:20px; margin-left:24px; }
.classificationList>form>a{ display:inline-block; vertical-align:middle; padding:8px 16px; font-size:14px; border:1px solid #e8e8e8; color:#a8a7a6; border-radius:14px; background:#f4f1ee; cursor:pointer; }
.classificationList>form>a>img{ width:10px; vertical-align:middle; margin-right:10px; }
.searchClassifi{ display:inline-block; }
.searchClassifi>input{ width:134px; vertical-align:middle; margin-left:20px; padding:8px 10px; font-size:12px; border:1px solid #dfdfdf; background:#fafafa; border-bottom-left-radius:6px; border-top-left-radius:6px; }
.searchClassifi>i{ width:30px; height:32px; vertical-align:middle; display:inline-block; border:1px solid #b7b6b3; background:#f4f0ee; border-bottom-right-radius:6px; border-top-right-radius:6px; }
.searchClassifi>i>img{ width:20px; margin-top:6px; margin-left:6px; }

/* �ּ��б� */
.cateList{ padding:0 20px; margin-top:15px; }
.cateList input[type="checkbox"]{ display:none; }
.cateList label>img{ width:22px; margin-left:20px; cursor:pointer; }
.cateHead{ padding:10px 0; background:#f4f7fc; }
.cateHead a span{ font-weight:bold; }
.cateList a{ display:inline-block; }
.cateList a,.cateList span,.cateList img{ vertical-align:middle; }
.cateList span{ font-size:14px; }
.cateA>a,.cateB>a,.cateC>a{ height:35px; line-height:35px; padding:5px 0; }
.cateA>a.c1>img{ width:14px; margin-left:15px; }
.cateB>a.c1>img{ width:14px; margin-left:45px; }
.cateList a.c4>img{ width:36px; }
.cateList a.c5>img{ width:14px; margin:0 5px; }
.cateA{ border-bottom:1px solid #ddd; }
.cateA:last-child{ border-bottom:none; }
.cateA a.c1>span,.cateB a.c1>span{ margin-left:10px; }
.cateC a.c1>span{ margin-left:100px; }
.cateB,.cateC{ border-top:1px solid #ddd; }
.c1{ width:450px;  }
.c1>span{ margin-left:15px; }
.c2{ width:330px; font-size:13px; }
.c3{ width:130px; font-size:14px;  }
.c3>img{ margin:0 15px; }
.c4{ width:140px; }
.c5{ width:110px; }
.c3,.c4,.c5{ text-align:center; cursor:pointer;  }
/* �ײ�ѡ�� */
.bottomTool{ width:268px; height:50px; line-height:50px; display:inline-block; margin:20px 0; margin-left:22px; background:white; }
.bottomTool>a{ display:inline-block; margin-left:26px; }
.bottomTool>a>span{ font-size:14px; }
.bottomTool>a>img{ vertical-align:middle; }
.bottomTool>a>span{ vertical-align:middle; margin-left:7px; }
.bottomAllSelect>img{ width:22px; }
.bottomDelect>img{ width:16px; }
.bottomProvisional>img{ width:16px; }
.bottomAllSelect>input[type="checkbox"]{ display:none; }
.bottomAllSelect>label>img{ width:22px; vertical-align:middle; cursor:pointer; }
.bottomProvisional>img{ width:16px; }

/* ��ӷ��� */
.addClassification{ width:480px; position:absolute; left:45%; top:25%; background:white; box-shadow:3px 5px 23px #888888;  }
.addClassification>p{ height:42px; line-height:42px; padding-left:28px; font-size:14px; font-weight:bold; color:#48a5ea; border-bottom:1px solid #ddd;  }
.addClassification>p>img{ width:20px; float:right; margin-top:11px; margin-right:20px; }
.addClassification>form>ul{ padding:20px; }
.addClassification>form>ul>li{ padding-bottom:15px; }
.addClassification>form>ul>li:last-child{ padding:0; }
.addClassification>form>ul>li>span{ width:90px; display:inline-block; text-align:right; }
.addClassification>form>ul>li span{ vertical-align:middle; font-size:14px; color:#b9b9b9; }
.addClassification>form>ul>li>input{ width:135px; vertical-align:middle; padding:5px; margin-left:12px; border:1px solid #ddd; }
.addClassification>form>ul>li>em{ vertical-align:middle; margin-left:10px; font-size:14px; }
.addClassification>form>ul>li>em>img{ width:18px; vertical-align:middle; }
.firstCateName>em,.secondCateName>em{ margin-left:10px; }
.firstCateName>em>span,.secondCateName>em>span{ vertical-align:middle; }
.cateDisplay>em{ font-size:14px; }
.oneSure,.oneDeny,.twoSure,.twoDeny{ vertical-align:middle; margin-left:14px; }
.oneSure>img,.oneDeny>img,.twoSure>img,.twoDeny>img{ vertical-align:sub; }
.addClassification>form>ul>li.addSecordCate>span,.addClassification>form>ul>li.cateDescribe>span{ vertical-align:top; }
.cateDescribe>textarea{ width:290px; height:80px; padding:10px; margin-left:10px; border:1px solid #ddd; }
.containerCate{ width:290px; display:inline-block; top:4px; left:105px; margin-left:100px; }
#addTwoStage{ width:290px; vertical-align:middle; padding:5px; margin-left:10px; border:1px solid #ddd; }
.tag{ display:inline-block; margin-top:10px; padding:5px 0 5px 5px; margin-left:5px; background:#f2f2f2; }
.tag:hover{ background:#484848; color:white; }
.tag>img{ width:10px; padding:0 5px; }
.cateDescribe{ position:relative; }
.cateDescribe>p{ position:absolute; right:32px; bottom:2px; }
.addClassification>form>ul>li.cateDescribe>p>span{ vertical-align:bottom; color:red; }
.addClassification>form>ul>li.cateDescribe>p>em{ font-size:14px; color:#ddd; }
#oneSub,#twoSub,#threeSub{ width:84px; height:26px; line-height:26px; margin-left:120px; margin-bottom:24px; color:#a33300; background:#ffce1c; border:1px solid #e69c14; }

/* ��Ҫ��ʾ  */
.tips1{ width:340px; position:absolute; top:50%; left:50%; padding:34px 34px 0 34px; font-size:14px; background:white; box-shadow:3px 5px 23px #888888; }
.tips1>img{ position:absolute; right:20px; top:15px; }
.tips1>p>span{ display:block; margin-top:5px; }
.tipsBtn{ text-align:center; margin-top:22px; }
.tipsBtn>em{ display:inline-block; padding:4px 10px; color:#aa4301; border:1px solid #e69c14; background:#ffce1c; }
.tipsBtn>a{ display:inline-block; padding:4px 10px; margin-left:28px; margin-bottom:20px; border:1px solid #ddd; }


