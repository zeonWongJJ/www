<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="?attr/listPreferredItemPaddingLeft"
    android:paddingEnd="?attr/listPreferredItemPaddingRight"
    android:paddingLeft="?attr/listPreferredItemPaddingLeft"
    android:paddingRight="?attr/listPreferredItemPaddingRight"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/image_room_type"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <!--<ImageView
        android:id="@+id/image_user_status"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:visibility="gone" />-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        >
        <ImageView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drawee_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
        <!--<ImageView
            android:layout_width="wrap_content"
            android:id="@+id/user_icon"
            android:src="@drawable/icon_face_pop"
            android:layout_height="wrap_content" />-->
        <ImageView
            android:id="@+id/image_user_status"
            android:layout_width="8dp"
            android:layout_gravity="right|top"
            android:layout_height="8dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/text_room_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_alert_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:background="@drawable/style_alert_count"
        android:visibility="gone" />
</LinearLayout>