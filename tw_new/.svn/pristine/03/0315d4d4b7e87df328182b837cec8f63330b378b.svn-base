
.productClassification{ width:1440px; margin:0 auto; font-size:0; }
.slideAdmin{ margin-top:20px; margin-left:22px; }
.slideAdmin>p{ height:53px; line-height:53px; padding-left:25px; font-size:16px; background:white; }

.slide_content{ margin-top:20px; background:white; }
.slide_content>form{ padding-top:20px; margin-left:24px; }
.slide_content>form>a{ display:inline-block; vertical-align:middle; padding:8px 16px; font-size:14px; border:1px solid #e8e8e8; color:#a8a7a6; border-radius:14px; background:#f4f1ee; }
.slide_content>form>a>img{ width:10px; vertical-align:middle; margin-right:10px; }

.choice_slide{ padding-top:20px; background:white; }
.choice_slide>table{ margin-left:20px; border-collapse:collapse;  }
.choice_slide>table tr>td:nth-child(1)>img{ max-width:140px; max-height:64px;  vertical-align:middle; }
.choice_slide>table tr>td.chocie_select>img{ width:15px; }
.choice_slide>table tr>td>span{ vertical-align:middle; font-size:14px; }
.choice_slide>table>thead>tr{ background:#F4F7FC; }
.choice_slide>table>thead>tr>td{ text-align:center; padding:10px 0; }
.choice_slide>table>tbody>tr>td{ text-align:center; font-size:14px; padding:12px 0; }
.choice_slide>table>tbody>tr{ border-bottom:1px solid #ddd; }
.choice_slide>table>tbody>tr:last-child{ border:none; }
.choice_slide>table>thead>tr>td>span{ font-weight:bold; }
.choice_slide>table>tbody>tr>td:nth-child(5)>img{ margin:0 10px; cursor:pointer; }

.choice_slide>table>thead>tr>td:nth-child(1){ width:200px; }
.choice_slide>table>thead>tr>td:nth-child(2){ width:200px; }
.choice_slide>table>thead>tr>td:nth-child(3){ width:474px; }
.choice_slide>table>thead>tr>td:nth-child(4){ width:100px; }
.choice_slide>table>thead>tr>td:nth-child(5){ width:120px; }

.choice_slide>table>tbody>tr>td:nth-child(1){ width:200px; }
.choice_slide>table>tbody>tr>td:nth-child(2){ width:200px; }
.choice_slide>table>tbody>tr>td:nth-child(3){ width:474px; }
.choice_slide>table>tbody>tr>td:nth-child(4){ width:100px; }
.choice_slide>table>tbody>tr>td:nth-child(5){ width:120px; }

/* 重要提示 */
.tips_lay{ width:320px; position:absolute; top:40%; left:50%; padding:30px; font-size:15px; background:white; box-shadow:3px 5px 23px #888888; z-index:2; }
.tips_lay>img{ width:15px; position:absolute; right:10px; top:10px; cursor:pointer; }
.tips_lay>p,.tips_lay>span{ margin-top:6px; font-size:14px; }
.tips_lay>span{ display:block; }
.tips_btn{ text-align:center; margin-top:20px; }
.tips_btn>em,.tips_btn>span{ display:inline-block; padding:2px 10px; font-size:12px; cursor:pointer;  }
.tips_btn>em{  color:#AF4605; background:#FFCE1C; border:1px solid #AF4605; }
.tips_btn>span{ margin-left:20px; border:1px solid #ddd; }

.lay{ position:absolute; width:100%; top:0; background:white; opacity:0.1; z-index:1; }


.page{ float:right; margin-top:30px; margin-right:20px; }
.page>a,.page>span{ display:inline-block; vertical-align:middle; padding:5px 10px; margin-left:10px; color:#999; font-size:14px; background:white; }
.page>a:hover{ background:#6e5c58; color:white; }